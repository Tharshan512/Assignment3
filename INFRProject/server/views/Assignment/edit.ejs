<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">assignment Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the assignment Title" name="Name" value="<%= assignment.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">assignment Author</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the assignment Author" name="Author" value="<%= assignment.Author %>" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Published</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the Published year" name="Published" value="<%= assignment.Published %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">assignment Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the assignment Description" name="Description" required><%= assignment.Description %></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="assignment's Price" name="Price" value="<%= assignment.Price %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>